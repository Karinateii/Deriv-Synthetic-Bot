# ================================
# REQUIRED: MetaTrader5 Credentials
# ================================
# These are REQUIRED for the bot to work
MT5_LOGIN=40815945
MT5_PASSWORD=your_deriv_password_here
MT5_SERVER=Deriv-Demo

# ================================
# OPTIONAL: Bot Settings
# ================================
# Leave these blank to use defaults
# Only set if you want different values than the defaults shown

# Risk per trade (default: 0.01 = 1%)
# Example: 0.02 = 2% per trade
RISK_PER_TRADE=0.01

# Max trades per day before bot stops taking new trades (default: 10)
MAX_DAILY_TRADES=10

# Max loss per day before bot stops taking new trades (default: 0.05 = 5%)
MAX_DAILY_LOSS=0.05
# Trading Symbols (comma-separated)
TRADING_SYMBOLS=R_10,R_25,R_50,R_75,R_100,BOOM500,BOOM1000,CRASH500,CRASH1000

# Strategy Configuration
PRIMARY_STRATEGY=ml_ensemble
ENABLE_AI_PREDICTION=true
MIN_CONFIDENCE_SCORE=0.65

# Risk Management
USE_TRAILING_STOP=true
STOP_LOSS_PERCENT=0.02
TAKE_PROFIT_PERCENT=0.04
MAX_OPEN_POSITIONS=3

# Logging
LOG_LEVEL=INFO
ENABLE_TRADE_LOGGING=true
